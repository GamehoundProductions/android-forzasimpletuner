                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:contentDescription="@string/EstimatedValueDsc"
                            android:text="@string/ResultHeaderText"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/MaxInfoBtn"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="1.0" />

                        <TextView
                            android:id="@+id/MaxInfoBtn"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:contentDescription="@string/MaxValueDsc"
                            android:text="@string/MaxHeaderText"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/MinInfoBtn"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="1.0" />

                        <TextView
                            android:id="@+id/MinInfoBtn"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
