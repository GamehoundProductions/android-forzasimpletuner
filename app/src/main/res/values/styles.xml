<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderText" parent="android:Widget.EditText">
        <item name="android:height">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:inputType">none</item>
        <item name="android:bottom">0dp</item>
    </style>

    <style name="InputField" parent="android:Widget.EditText">
        <item name="android:height">30dp</item>
        <item name="android:width">60dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

</resources>
